<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog_update"


>
<TextView
    android:id="@+id/tv_dialog_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="메모 수정"
    android:textSize="30dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="10dp"
    />

    <View
        android:id="@+id/view_dialog_borderline"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title"
        android:background="@color/purple_200"


        />
    <TextView
        android:id="@+id/tv_dialog_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_dialog_update"
        app:layout_constraintTop_toBottomOf="@+id/view_dialog_borderline" />

    <TextView
        android:id="@+id/tv_dialog_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:textSize="35dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_dialog_remove"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_dialog_borderline" />



</androidx.constraintlayout.widget.ConstraintLayout>